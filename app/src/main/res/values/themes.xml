<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Livapp" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/lessDark</item>
        <item name="colorPrimaryVariant">@color/evenLessDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>
</resources>